using SocialGoal.Web.Core.Extensions
@using RajaMotors.Web.Core.Extensions
@model RajaMotors.Web.ViewModels.SearchViewModel
@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}
 
<div class="well"><h4>Search results for "@Model.SearchText" are..</h4></div>
 <div class="span4 well" style="margin-left:0px;height:380px;">
    <strong>Clients</strong><hr />
    @if (!Model.Clients.Any())
    {
        <div class="alert alert-info">No goals to display</div>
    }
    <div style="max-height:300px;overflow-y:auto;" id="goallistcontainer">
        @foreach (var item in Model.Clients)
        {
            <div>
                <div style="position: relative">
                    <strong>@Html.ActionLink(item.ClientName, "Index", "Client", new { id = item.ClientId }, null)</strong>
                </div>
                <div>
                    <small>@item.ClientDateAdded.ToString() - @item.ClientDateModified.ToString()</small>
                </div> 
            </div>
            <hr />
        }
    </div>
</div>   
<div class="span4 well" style="margin-left:25px;height:380px;">
    <strong>Vehicles</strong><hr />
    @if (!Model.Vehicles.Any())
    {
        <div class="alert alert-info">No people to display</div>
    }
    <div style="max-height:300px;overflow-y:auto;" id="peoplelistcontainer">
        @foreach (var item in Model.Vehicles)
        {
            <div>
                <div style="margin-left: 50px;">
                    @Html.ActionLink(@item.VehicleModelName, "UserProfile", "Account", new {id = item.VehicleId}, null)
                </div>
                <div style="margin-left: 50px;">
                    @*<small>Registered On @item.VehicletDateAdded.ToString("dd MMM yyyy -   hh:mm tt ") </small>*@
                </div>
            </div>
            <hr style="margin: 23px 0px 0px 0px;"/>
        }
    </div>
</div>  

<style type="text/css">
    .thumbnail {
        width: 50px;
        height: 40px;
    }
</style>


<script type="text/javascript">
    $(function () {
        $('#goallistcontainer').niceScroll();
        $('#grouplistcontainer').niceScroll();
        $('#peoplelistcontainer').niceScroll();
    }); 
</script>
